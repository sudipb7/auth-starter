{
  "compilerOptions": {
    // Base Options
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,

    // Strictness
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    // Turning TS into JS
    "module": "NodeNext",
    "outDir": "dist",
    "sourceMap": true,

    // Runtime
    "lib": ["ES2022", "DOM"]
  },
  "include": ["src/**/*", "drizzle.config.ts", "src/types/express.d.ts"],
  "exclude": ["node_modules"],
}
